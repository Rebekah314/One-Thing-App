
//TO DO: refactor so that jwt doesn't need to be passed into this function

function reusableFetch(url, requestMethod, requestBody, jwt) {

    const fetchData = {
        headers: {
            "Content-Type": "application/json"
        },
        method: requestMethod
    };

    if (jwt) {
        fetchData.headers.Authorization = `Bearer ${jwt}`;
    };

    if (requestBody) {
        fetchData.headers.body = JSON.stringify(requestBody);
    };


    fetch(url, fetchData).then(response => {
        if (response.status === 200) return response.json();
    });


}

export default reusableFetch;